# Teamcenter Easy Plan AI Agent - Environment Variables Template
# Copy this file to .env and add your actual API keys

# Anthropic API for Claude Sonnet 4 (REQUIRED)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Langfuse for experiment tracking and evaluation (REQUIRED)
LANGFUSE_PUBLIC_KEY=pk-lf-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
LANGFUSE_SECRET_KEY=sk-lf-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
LANGFUSE_HOST=https://cloud.langfuse.com

# Optional: Alternative LLM providers for fallback/comparison
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Application Settings (can be left as defaults)
LOG_LEVEL=INFO
DATA_DIRECTORY=data
DOCUMENTS_DIRECTORY=documents
WEB_SOURCES_DIRECTORY=web_sources

# Vector Store Settings (can be left as defaults)
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=800
CHUNK_OVERLAP=100
TOP_K_RETRIEVAL=5

# Web Scraping Settings (can be left as defaults)
WEB_SCRAPING_ENABLED=true
MAX_PAGES_PER_SITE=50
SCRAPING_DELAY=1.0
USER_AGENT=TeamcenterAgent/1.0 (Educational)

# LLM Settings (can be left as defaults)
PRIMARY_MODEL=claude-sonnet-4-20250514
MAX_TOKENS=1000
TEMPERATURE=0.1
MAX_CONTEXT_LENGTH=4000